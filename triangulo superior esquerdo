 #include<stdio.h>
#include<locale.h>
int main()
{
	setlocale(LC_ALL, "portuguese");
	
	int i;
	int h;
	int x;
	int l;
	printf("altura: ");
	scanf("%d", &h);
	
	for (i = 0; i < h; i++)
	{
		
		printf("\n");
		
	for (l = h; l > i; l--)
	{
		printf(" ");
	}
	for (x = 0; x < l; x++)
	{
		printf("*");	

	}	
	}
	
	
	return 0;
}
