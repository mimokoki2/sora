
#include<stdio.h>
#include<locale.h>
int main()
{
	setlocale(LC_ALL, "portuguese");
	
	int i;
	int h;
	int x;
	printf("altura: ");
	scanf("%d", &h);
	
	for (i = h; i > 0; i--)
	{
		printf("\n");
	for (int l = h; l > i; l--)
	{
		printf(" ");
	}	
	for (x = i; x > 0; x--)
	{
		printf(" ");
		printf("*");
	}
	}
	
	
	return 0;
}
