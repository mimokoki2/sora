void linha1();
void linha2();
void cadastro();
void verificar();
int main()
{
	system("color 0a");
	setlocale(LC_ALL, "portuguese");
	cadastro();
		return 0;
}
int cdgpassageiro = 0;
void cadastro()
{
	system("cls");
 	 int destino, origem, aviao = 80, bancos;
	int passageiro[80][3];
	
	for(int i = 1; i <= aviao; i++)
	{
		
		 for(int j = 0; j <= 1; j++)
		 {
	 	  cdgpassageiro++;
	 	  printf("Passageiro Código [%d]", cdgpassageiro);
	 	  printf("	Saindo de \n");
	 	  linha1();
	 	  
	 	  printf(" [1] - Porto Alegre \n [2] - Florianópolis \n [3] - São Paulo \n [4] - Belo Horizonte \n [5] - Brasília \n");
	 	  linha1();
	 	  
	 	  printf("ORIGEM: ");
	 	  scanf("%d", &origem);
	 	  linha2();
	 	  
	  	  printf("Passageiro Código [%d]	Indo para\n", cdgpassageiro);
		  linha1();
		  
		  printf(" [1] - Porto Alegre \n [2] - Florianópolis \n [3] - São Paulo \n [4] - Belo Horizonte \n [5] - Brasília \n");
		  linha1();
		  
		  printf("DESTINO: ");
		  scanf("%d", &destino);
		  linha2();
		  
		  
		 passageiro[i][0] = cdgpassageiro;
		 passageiro[i][1] = origem;
		 passageiro[i][2] = destino;
		  
		  
		  if(origem == destino) 
		  {
		  	printf("ERRO, TENTE NOVAMENTE.\n");
		  	system("pause");
		  	cdgpassageiro--;
		  	return cadastro();
			  		  	
		  }else{
		  	printf("Passageiro [%d] com destino a [%d] confirmado.\n", cdgpassageiro, destino);
		  	bancos++;
		  	linha2();
		  	
			printf("Próximo [Enter]\n");	
			linha2();	  
			
		  	system("pause");
		  	system("cls");
		  	
		  }
		  
		 }
	 
	}
	/*Código para verificar passageiros e destinos */
	for(int i = 0; i <= 80; i++)
	{
		for(int j = 0; j <= 3; j++)
		{
			printf("Passageiro Código [%d] Origem [%d] Destino [%d]\n", i, passageiro[i][j], passageiro[i][j+1]);
		}
	}
}

void linha1()
{
	for(int i = 0; i < 80; i++)
	{
		printf("-");
	}
	printf("\n");
}
void linha2()
{
	for(int i = 0; i < 80; i++)
	{
		printf("_");
	}
	printf("\n\n");
}
