#include<stdio.h>
#include<stdlib.h>
int main()
{
	int id[100],qtd[100],dt, op, conf;
	float preco;
	char nome[100];
	 
	do
	{
		system("color 0a");
	printf("O que deseja fazer?\n");
	printf("------------------------------\n");
	printf("[1] -	Cadastro de Produto\n[2] -	Mostrar Estoque\n[3] -	Alterar Produto\n[4] -	Excluir Produto\n[5] -	Pesquisar\n-------------------------------\n");
	printf("opcao: ");
	scanf("%d", &op);
	printf("------------------------------\n");

	printf("ID: ");
	scanf("%d", &id);
	printf("Nome: ");
	scanf("%s", &nome[0]);
	printf("preco: ");
	scanf("%f", &preco);
	printf("------------------------------\n");
	printf("ID: %d, NOME: %s, PRECO: %.2f\n------------------------------\nConfirma operacao?\n------------------------------\n[1] -	Sim\n[2] -	Nao\n------------------------------\n Opcao: ", id, nome, preco);
	scanf("%d", &conf);
	printf("------------------------------\n");

	if (conf == 1) printf("Produto Cadastrado com sucesso!\n------------------------------\n");
	
	}while (op == 1);
	return 0;
}
