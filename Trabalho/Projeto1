#include<stdio.h>
#include<stdlib.h>
	int qtd;
	int ope;
struct produto
{
	int id[100];
	char nome[100][100];
	float preco[100];
	
	
};
struct produto op;

int op1()
{
	if(ope == 1)
	{
		printf("Digite a quantidade de produtos: ");
		scanf("%d", &qtd);
		for(int i = 0; i < qtd; i++)
		{
			printf("ID: ");
			scanf("%d", &op.id[i]);
			printf("Nome: ");
			scanf("%s", &op.nome[i]);
			printf("preco");
			scanf("%f", &op.preco[i]);
		}
	}
}
int op2()
{
	int men;
	for(int i = 0; i < qtd; i++)
	{
		printf("ID:%d, Nome: %s, Preco: %.2f.\n", op.id[i], op.nome[i], op.preco[i]);
		
		
	}
}
int op3()
{
	int ida, opec;
	printf("Digite o ID do produto que deseja alterar: ");
	scanf("%d", &ida);
	for(int i = 0; i < qtd; i++)
	{
		if(ida == op.id[i])
		{
			printf("Deseja alterar o produto com ID %d?");
			printf("[1] -	sim\n[2]- 	nao\n");
			scanf("%d", &opec);
			if(opec == 1)
					{
						printf("Digite o novo ID: ");
						scanf("%d", &op.id[i]);
						printf("Digite o novo nome: ");
						scanf("%s", &op.nome[i]);
						printf("Preco: ");
						scanf("%f", &op.preco[i]);
						printf("------------------------------\n");
						printf("Produto alterado com sucesso!\n");
						printf("------------------------------\n");
					}
				}else{
					printf("ID Nao encontrado.\n");
				}

		}
	}


int main()
{
	system("cls");
	system("color 0a");
	printf("O que deseja fazer?\n");
	printf("------------------------------\n");
	printf("[1] -	Cadastro de Produto\n[2] -	Mostrar Estoque\n[3] -	Alterar Produto\n[4] -	Excluir Produto\n[5] - 	Pesquisar\n[6] -	Sair do programa\n-------------------------------\n");
	printf("opcao: ");
	scanf("%d", &ope);
	printf("------------------------------\n");
	switch(ope)
	{
		case 1:
			{
				op1();
				return main();
				break;
			} 
		case 2:
			{
				op2();
				
				break;
			}
		case 3:
			{
				op3();
				return main();
				break;
			}
	}
return 0;
}
	
