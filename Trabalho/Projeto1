#include<stdio.h>
#include<stdlib.h>
#include<conio.h>
	int qtd,dt, op, conf;
	float preco[100];
	char nomes[100][100];
	int i, menu;
	int aux = 0;
	 int id[100];
	 int ida;
int main()
{

	
	fflush(stdin);
	system("cls");
	system("color 0a");
	printf("O que deseja fazer?\n");
	printf("------------------------------\n");
	printf("[1] -	Cadastro de Produto\n[2] -	Mostrar Estoque\n[3] -	Alterar Produto\n[4] -	Excluir Produto\n[5] - 	Pesquisar\n[7] -	Sair do programa\n-------------------------------\n");
	printf("opcao: ");
	scanf("%d", &op);
	printf("------------------------------\n");
	switch(op)
	{
	case 1:
	{
	printf("Digite a quantidade de produtos a serem Cadastrados: ");
	scanf("%d", &qtd);
	for(i = 0; i < qtd; i++)
	{
	aux = i + aux;
	printf("ID: ");
	scanf("%d", &id[i]);
	printf("Nome: ");
	scanf("%s", &nomes[i]);
	printf("preco: ");
	scanf("%f", &preco[i]);
	printf("------------------------------\n");
	printf("ID: %d, NOME: %s, PRECO: %.2f\n------------------------------\nConfirma operacao?\n------------------------------\n[1] -	Sim\n[2] -	Nao\n------------------------------\n Opcao: ", id[i], nomes[i], preco[i]);
	scanf("%d", &conf);
	printf("------------------------------\n");
	}//FOR
	printf("[1]-	Voltar ao menu anterior\n");
	scanf("%d", &menu);
	if(menu == 1) return main();
	break;
	
	}//CASE
	case 2:
		{
		for(int x = 0; x < qtd; x++)
		{
			printf("ID: %d, Nome: %s, Valor: %.2f\n",id[x], nomes[x], preco[x]);
		}
	printf("[1]-	Voltar ao menu anterior\n");
	scanf("%d", &menu);
	if(menu == 1) return main();
		break;
		}
	case 3:
		{
			int opicao;
			printf("Digite o ID do produto que deseja alterar: ");
			scanf("%d", &ida);
	
			
			
			for(int d = 0; d < qtd; d++)
			{
				if(ida == id[d]) 
				{
					printf("Deseja alterar o produto com ID: %d ?\n", id[d]);
					printf("[1] -	sim\n[2]- 	nao\n");
					printf("opcao: ");
					scanf("%d", &opicao);
					if(opicao == 1)
					{
						printf("Digite o novo ID: ");
						scanf("%d", &id[d]);
						printf("Digite o novo nome: ");
						scanf("%s", &nomes[d]);
						printf("Preco: ");
						scanf("%f", &preco[d]);
						printf("------------------------------\n");
						printf("Produto alterado com sucesso!\n");
						printf("------------------------------\n");
					}
				}else{
					printf("ID nao encontrado\n");
				}
				

			}
			
	printf("[1]-	Voltar ao menu anterior\n");
	scanf("%d", &menu);
	if(menu == 1) return main();
	break;
		}
		case 4:
			{
				
			}
		
}
		
	return 0;
}
